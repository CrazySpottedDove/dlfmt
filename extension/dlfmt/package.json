{
	"name": "dlfmt",
	"publisher": "CrazySpottedDove",
	"displayName": "dlfmt",
	"description": "a blazing fast lua formatter",
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.106.0"
	},
	"keywords": [
		"lua",
		"formatter",
		"format",
		"beautify",
		"pretty",
		"code style",
		"代码格式化",
		"lua formatter",
		"lua beautify",
		"lua pretty",
		"lua 格式化",
		"lua 自动格式化",
		"high performance",
		"minify",
		"代码压缩",
		"高性能"
	],
	"categories": [
		"Other"
	],
	"icon": "icon.png",
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "dlfmt.formatFileAuto",
				"title": "dlfmt: format file with auto style"
			},
			{
				"command": "dlfmt.formatDirectoryAuto",
				"title": "dlfmt: format directory with auto style"
			},
			{
				"command": "dlfmt.formatFileManual",
				"title": "dlfmt: format file with manual style"
			},
			{
				"command": "dlfmt.formatDirectoryManual",
				"title": "dlfmt: format directory with manual style"
			},
			{
				"command": "dlfmt.compressFile",
				"title": "dlfmt: compress file"
			},
			{
				"command": "dlfmt.compressDirectory",
				"title": "dlfmt: compress directory"
			},
			{
				"command": "dlfmt.runJsonTask",
				"title": "dlfmt: run json tasks"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "dlfmt.formatFileAuto",
					"when": "true"
				},
				{
					"command": "dlfmt.formatDirectoryAuto",
					"when": "true"
				},
				{
					"command": "dlfmt.formatFileManual",
					"when": "true"
				},
				{
					"command": "dlfmt.formatDirectoryManual",
					"when": "true"
				},
				{
					"command": "dlfmt.compressFile",
					"when": "true"
				},
				{
					"command": "dlfmt.compressDirectory",
					"when": "true"
				},
				{
					"command": "dlfmt.runJsonTask",
					"when": "true"
				}
			],
			"explorer/context": [
				{
					"command": "dlfmt.formatFileAuto",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == false && resourceExtname == .lua"
				},
				{
					"command": "dlfmt.formatFileManual",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == false && resourceExtname == .lua"
				},
				{
					"command": "dlfmt.compressFile",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == false && resourceExtname == .lua"
				},
				{
					"command": "dlfmt.formatDirectoryAuto",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == true"
				},
				{
					"command": "dlfmt.formatDirectoryManual",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == true"
				},
				{
					"command": "dlfmt.compressDirectory",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == true"
				},
				{
					"command": "dlfmt.runJsonTask",
					"group": "navigation",
					"when": "resourceScheme == file && explorerResourceIsFolder == false && resourceExtname == .json"
				}
			]
		},
		"configuration": {
			"title": "dlfmt",
			"properties": {
				"dlfmt.path": {
					"type": "string",
					"default": "",
					"description": "override dlfmt binary's absolute path, leave it empty to use the bundled one"
				},
				"dlfmt.format.mode": {
					"type": "string",
					"enum": [
						"auto",
						"manual"
					],
					"default": "auto",
					"description": "Default format work mode for dlfmt(auto / manual)"
				}
			}
		},
		"languages": [
			{
				"id": "lua",
				"aliases": [
					"Lua"
				],
				"extensions": [
					".lua"
				],
				"configuration": "./language-configuration.json"
			}
		]
	},
	"files": [
		"extension.js",
		"bin/**"
	],
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test"
	},
	"activationEvents": [
		"onLanguage:lua",
		"onCommand:dlfmt.formatFileAuto",
		"onCommand:dlfmt.formatDirectoryAuto",
		"onCommand:dlfmt.formatFileManual",
		"onCommand:dlfmt.formatDirectoryManual",
		"onCommand:dlfmt.compressFile",
		"onCommand:dlfmt.compressDirectory",
		"onCommand:dlfmt.runJsonTask"
	],
	"devDependencies": {
		"@types/vscode": "^1.106.0",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"eslint": "^9.13.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/CrazySpottedDove/dlfmt"
	},
	"license": "MIT"
}
